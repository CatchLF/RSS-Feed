{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ES2020",
        "verbatimModuleSyntax": true
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}